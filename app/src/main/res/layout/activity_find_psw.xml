<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegeditActivity"
    android:orientation="vertical"
    android:background="@color/colorBlue"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/ll_toolbar">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorDarkGray"
            android:layout_marginTop="25dp"
            android:text="修改密码" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_editinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorDarkGray"
                android:layout_marginRight="35dp"
                />
            <EditText
                android:id="@+id/et_mod_psw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:hint="请输入6-11位的密码"
                android:inputType="textPassword"
                android:autoSizeMaxTextSize="11sp"
                android:textColorHint="@color/colorSmallGray"
                android:background="@drawable/bg_btn_button"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textColor="@color/colorDarkGray"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_cfg_psw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:hint="再次输入密码"
                android:inputType="textPassword"
                android:autoSizeMaxTextSize="11sp"
                android:textColorHint="@color/colorSmallGray"
                android:background="@drawable/bg_btn_button"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_oprt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_alignParentEnd="true">
        <Button
            android:id="@+id/btn_alter"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_btn_login"
            android:text="修改密码"
            android:textSize="17sp"
            android:textColor="@color/colorDarkGray"/>

    </LinearLayout>
</RelativeLayout>
