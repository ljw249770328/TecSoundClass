<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="60dp"
    android:paddingBottom="70dp"
    android:animateLayoutChanges="true"

    android:background="@drawable/bg_dialog">
    <TextView
        android:id="@+id/tv_CTitle_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="来自XXXX课堂"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#CEF1F1F1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="点击按钮进行声纹验证"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/edt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/error_result"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_tv_sign_button"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="签到"
        android:textSize="18sp"
        android:textColor="@color/colorDialogButtonText"/>


</LinearLayout>