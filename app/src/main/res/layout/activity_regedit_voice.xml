<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".View.Activity.RegeditVoiceActivity"
    android:background="@color/colorGreen">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_back"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/isv_getpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_marginTop="10dp"
        android:src="@drawable/microphone_re"/>
    <TextView
        android:id="@+id/edt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/isv_getpassword"
        android:layout_marginTop="35dp"
        android:text="点击麦克风获取识别字符"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/error_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_result"
        android:layout_marginTop="35dp"
        android:text=""
        android:padding="5dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/colorDarkGray"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/isv_reocrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_record_btn"

        android:text="开始录音"
        android:textColor="@color/colorGreen"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_above="@id/isv_delete"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/isv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_exit_btn"

        android:text="删除模型"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="17sp"
        android:padding="15dp"/>
</RelativeLayout>