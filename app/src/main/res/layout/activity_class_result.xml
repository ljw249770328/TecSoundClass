<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorBlue">
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/small_back"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索结果"
            android:textColor="@color/colorTitleBlue"
            android:textStyle="bold"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_below="@id/ll_1"
            android:orientation="vertical"
            android:layout_marginTop="-85dp"
            android:background="@drawable/bg_layout_classres_bg">
            <TextView
                android:id="@+id/tv_result_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="95dp"
                android:text="(课堂名)"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册班级:"
                    android:textSize="15sp"
                    android:textColor="@color/colorSmallGray"/>
                <TextView
                    android:id="@+id/tv_result_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="()"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授课老师:"
                    android:textSize="15sp"
                    android:textColor="@color/colorSmallGray"/>
                <TextView
                    android:id="@+id/tv_result_tea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="()"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课时间:"
                    android:textSize="15sp"
                    android:textColor="@color/colorSmallGray"/>
                <TextView
                    android:id="@+id/tv_result_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="()"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间:"
                    android:textSize="15sp"
                    android:textColor="@color/colorSmallGray"/>
                <TextView
                    android:id="@+id/tv_result_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="()"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_class_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@drawable/head_image"/>
        </LinearLayout>
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/head"
       android:layout_marginTop="270dp"
       android:layout_marginLeft="15dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="15dp"
           android:layout_marginTop="15dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="课堂要求:"
               android:textSize="15sp"
               android:textColor="@color/colorSmallGray"/>


       </LinearLayout>
       <TextView
           android:layout_marginTop="40dp"
           android:id="@+id/tv_result_req"
           android:layout_width="370dp"
           android:layout_height="270dp"
           android:layout_marginLeft="5dp"
           android:text="课堂要求详情"
           android:gravity="center"
           android:background="@drawable/bg_layout_classres_bg"
           android:textSize="15sp"
           android:textColor="@color/colorSmallGray"/>

   </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/btn_join"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_complete"
            android:text="加入"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorTitleBlue"
            android:layout_marginTop="300dp"
            />
    </LinearLayout>


</RelativeLayout>