<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_toolbar">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="7dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="创建课堂"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="创建"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/add" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_load_class_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/src" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18dp"
            android:gravity="center"
            android:text="课堂封面"
            android:textColor="@color/colorDarkGray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/class_edt_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="课程名"
                android:textSize="16dp"
                android:padding="7dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBgGray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/class_edt_number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="班级"
                    android:textSize="16dp"
                    android:padding="7dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/colorDarkGray"
                    android:textColor="@color/colorBlack" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBgGray" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="@color/colorBlack"
                android:padding="7dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_et_edit"
                android:text="班"
                android:textSize="16dp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_class_set_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@drawable/bg_save_btn"
                android:text="上课时间"
                android:textSize="16sp"
                android:padding="7dp"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/edit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="─"
                android:padding="7dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_class_set__over_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@drawable/bg_save_btn"
                android:text="下课时间"
                android:textSize="16sp"
                android:layout_marginRight="6dp"
                android:padding="7dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/edit"/>
        </LinearLayout>


        <EditText
            android:id="@+id/class_edt_moreinfo"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:padding="5dp"
            android:hint="老师有话说..."
            android:textColorHint="@color/colorDarkGray"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_et_edit"
            android:paddingHorizontal="5dp"
            android:paddingVertical="7dp"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
</LinearLayout>