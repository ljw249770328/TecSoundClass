<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorGreen">
            <ImageView
                android:id="@+id/im_back"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/small_back"
                android:scaleType="fitCenter"
                android:layout_marginLeft="7dp" />
            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(当前课程名)"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_1"
            android:background="@color/colorBgGray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ll_data"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/colorSmallGray"
                android:orientation="horizontal"
                android:text="近期更新"
                android:textSize="15sp"
                android:padding="5dp">

            </TextView>
            <ListView
                android:id="@+id/lv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_data"
                android:background="@color/colorWhite">
            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/colorSmallGray"
                android:textColor="@color/colorButtonText"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="111"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorSmallGray"
                    android:hint="请输入上课时间检索相关语音"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/plane"
                    android:textColorHint="@color/colorSmallGray"
                    android:background="@drawable/bg_edit_seach"/>

                <Button
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="搜索"
                    android:textColor="@color/colorDarkGray"
                    android:background="@drawable/bg_btn_search" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>