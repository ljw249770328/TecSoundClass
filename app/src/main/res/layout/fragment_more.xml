<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_toolbar">
            <ImageView
                android:id="@+id/im_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/small_back"
                android:scaleType="fitCenter"
                android:layout_marginLeft="7dp" />
            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(当前课程名)"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_1"
            android:background="@color/colorWhite"
            android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_more_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_change_cpic"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="center"
                        android:background="@drawable/bg_im_class_head"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_class_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课堂ID:"
                            android:textColor="@color/colorBlack"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/tv_mcourse_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课堂名称"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/tv_mclass_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="班级名称"
                            android:textSize="12dp"
                            android:textColor="@color/colorSmallGray"
                            android:layout_marginTop="15dp" />
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp">

                    <ScrollView
                        android:id="@+id/sv_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="5dp"
                            android:paddingBottom="100dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_c_info_item">
                                <TextView
                                    android:id="@+id/tv_tea_info"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:padding="7dp"
                                    android:text="教师信息:"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite"/>
                                <TextView
                                    android:id="@+id/tv_ctea_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:gravity="right"
                                    android:padding="7dp"
                                    android:text="xxxxx"
                                    android:textColor="@color/colorWhite"
                                    android:maxLines="1"
                                    android:textSize="16sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/bg_c_info_item"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_class_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="7dp"
                                    android:layout_weight="8"
                                    android:text="上课时间:"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/tv_Ctime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:padding="7dp"
                                    android:text="xxxxx"
                                    android:gravity="right"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:textColor="@color/colorWhite"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_class_request"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_below="@id/ll_1"
                                android:padding="7dp"
                                android:text="课堂要求:"
                                android:drawableRight="@drawable/down"
                                android:background="@drawable/bg_c_info_item"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"/>

                            <TextView
                                android:id="@+id/tv_request_text"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/bg_c_info_item"
                                android:layout_marginHorizontal="3dp"
                                android:visibility="gone"
                                android:padding="7dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/iv_code_img"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorSmallGray"
                                android:layout_gravity="center"
                                android:padding="1dp"
                                android:textSize="11sp"
                                android:text="将二维码提供给学生用于加入该课堂"/>
                        </LinearLayout>
                    </ScrollView>
                    <TextView
                        android:id="@+id/tv_exit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="7dp"
                        android:gravity="center"
                        android:text="退出课堂"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:paddingVertical="7dp"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/bg_exit_btn"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>