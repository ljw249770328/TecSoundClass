<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorGreen"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="25dp"
            android:text="请登录" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/ll_title"
        android:layout_marginTop="80dp"
        >
        <LinearLayout
            android:id="@+id/l_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帐号:"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                />
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:hint="手机号/学号"
                android:autoSizeMaxTextSize="16sp"
                android:inputType="number"
                android:textColorHint="@color/colorSmallGray"
                android:background="@drawable/bg_et_login"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_below="@+id/l_user_id"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:hint="请输入6-11位密码"
                android:inputType="textPassword"
                android:autoSizeMaxTextSize="11sp"
                android:textColorHint="@color/colorSmallGray"
                android:background="@drawable/bg_et_login"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_oprt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_regedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="12dp"
                android:text="注册"
                android:textColor="@color/colorSmallGray"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:text="忘记密码?"
                android:textColor="@color/colorSmallGray"
                android:textSize="15sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_login"
            android:text="登录"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</RelativeLayout>
