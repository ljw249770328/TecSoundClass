<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="60dp"
    android:paddingBottom="70dp"
    android:background="@color/colorGreen">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="当前问题"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorSmallGray"/>
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="（问题）"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLines="3"
        android:scrollbars = "vertical"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:textSize="23sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:paddingVertical="7dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_select"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_tv_sign_button"
            android:gravity="center"
            android:text="点名"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorDialogButtonText"/>
        <View
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_tv_cancel_button"
            android:gravity="center"
            android:text="取消"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#A64343"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_waiting_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_tv_sign_button"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_tv_sign_button"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_tv_sign_button"/>

    </LinearLayout>


</LinearLayout>